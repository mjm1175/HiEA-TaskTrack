<p style="color: green"><%= notice %></p>

<% content_for :title, "Projects" %>

<div class="container">
    <div class="column">
        <div class="row">
            <h1>Projects</h1>
            <%= link_to "New project", new_project_path, class: "btn btn-primary" %>
        </div>
        <br>
        <div class="row">
            <div id="projects">
                <% @projects.each do |project| %>
                <%= render project %>
                <div>
                    <strong>Number of Tasks:</strong>
                    <%= project.tasks_count %>
                </div>
                <div>
                    <strong>Number of Unfinished Tasks:</strong>
                    <%= project.unf_tasks_count %>
                </div>
                <p>
                    <%= link_to "View", project, class: "btn btn-primary" %>
                </p>
                <% end %>
            </div>
        </div>
    </div>
</div>