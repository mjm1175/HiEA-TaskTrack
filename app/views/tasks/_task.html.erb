<div id="<%= dom_id task %>">
    <tr>

        <td>
            <div class="d-flex flex-wrap gap-1">
                <div class="row g-2">
                    <div class="d-flex gap-2">
                        <h6><%= task.title %></h6>
                        <% if task.overdue? %>
                        <span class="badge text-bg-danger">Overdue</span>
                        <% end %>
                    </div>

                    <div class="d-flex gap-2">
                        <%= link_to "Edit", edit_project_task_path(@project, task), class: "btn btn-secondary" %>
                        <%= button_to "Delete", project_task_path(@project, task), method: :delete, class: "btn btn-secondary" %>
                    </div>

                    <div>
                        <!-- Carrot/dropdown reveal tab for view button to display task description -->
                        <details>
                            <summary class="view-link">View</summary>
                            <div class="task-description">
                                <!-- "None" if no description instead of blank -->
                                Task Description:
                                <p><%= task.description.present? ? task.description : "None" %></p>
                            </div>
                        </details>
                    </div>
                </div>
            </div>
        </td>


        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= task.due_date %></td>


    </tr>
</div>