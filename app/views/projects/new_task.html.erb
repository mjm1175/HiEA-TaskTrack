<h1>New Task for <%= @project.name %></h1>

<%= form_with model: [@project, @task], url: create_task_project_path(@project), local: true do |f| %>
  <% if @task.errors.any? %>
    <div style="color: red;">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description, style: "display: block" %>
    <%= f.textarea :description %>
  </div>  

  <div>
    <%= f.label :status %>
    <%= f.select :status, Task::STATUSES.map { |s| [s.titleize, s] }, prompt: "Select status" %>
  </div>  

  <div>
    <%= f.label :due_date%>
    <%= f.date_select :due_date %>
  </div>  

  <div>
    <%= f.label :priority%>
    <%= f.select :priority, Task::VALID_PRIORITIES.map { |s| [s, s] }, prompt: "Select priority" %>
  </div>  

  <div>
    <%= f.submit "Create Task" %>
  </div>
<% end %>

<%= link_to "Back to Project", project_path(@project) %>